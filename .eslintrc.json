{   
  "extends": "eslint-config-react",
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2018,
    "ecmaFeatures": {
        "jsx": true
      }
  },
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/jsx-uses-vars": "off",
    "react/jsx-uses-react": "off",
    "no-console": "off",
    "strict": ["error", "global"],
    "curly": "warn",
    "semi": ["error", "never"],
    "indent": ["error", 2] ,
    "comma-dangle": ["error", "always-multiline"],
    "space-before-function-paren": "off" 
    // if you want to remove prop validation:
    // "react/prop-types": "off"
  }
}
